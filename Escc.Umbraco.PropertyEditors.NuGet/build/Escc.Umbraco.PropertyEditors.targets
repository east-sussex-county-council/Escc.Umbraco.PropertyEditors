<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ItemGroup>
    <AppPlugins Include="packages\Escc.Umbraco.PropertyEditors.1.0.0\Content\App_Plugins\**\*.*"/>
  </ItemGroup>

  <Target Name="CopyFiles" BeforeTargets="PrepareForBuild">
    <Copy
        SourceFiles="@(AppPlugins)"
        DestinationFiles="@(AppPlugins->'.\App_Plugins\%(RecursiveDir)%(Filename)%(Extension)')"
        />
  </Target>
</Project>